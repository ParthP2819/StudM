@model List<List<Stud.Model.Models.course>>

@{
    ViewData["Title"] = "Index";
}

<div class=" row pt-4">
    <div class="col-6">
        <h2 class="text-info">Course List </h2>
    </div>
    <div class=" col-6 text-end">
        <div class="col-6 text-end">
            <a asp-controller="StudM" asp-action="Index" class="btn btn-info">
                <i class="bi bi-skip-backward"></i> &nbsp;Back
            </a>
        </div>
    </div>
</div>
<br />

<div class="container p-3">
    <table class="table table-bordered table-striped" style="width:100%; background-color:lightgray;">
        <thead class="bg-info">
            <tr>
                <th>CourseName</th>
                <th>CoursePrice</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                @foreach (var abc in obj)
                {
                    <tr>
                        <td>@abc.CourseName</td>
                        <td>@abc.CoursePrice</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="StudM" asp-action="EditCourse" asp-route-id="@abc.CourseId"
                                class="btn btn-info mx-2"> <i class="bi bi-pencil-square"></i> </a>
                                <a asp-controller="StudM" asp-action="DeleteCourse" asp-route-Id="@abc.CourseId"
                                class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i> </a>
                            </div>
                        </td>
                    </tr>
                }               
            }
        </tbody>
    </table>
</div>